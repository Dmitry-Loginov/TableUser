@model IEnumerable<Ex4.Models.User>
@{
    ViewData["Title"] = "List";
}
<form method="post" asp-controller="Users" asp-action="Block" style="display:inline;">
    <input class="Sender" type="text" name="ids" value="" style="visibility:hidden; position:absolute;" />
    <input type="submit" value="Block" class="btn btn-primary" style="margin:2px; display:inline;">
</form>
<form method="post" asp-controller="Users" asp-action="Unblock" style="display:inline;">
    <button type="submit" class="btn btn-primary" style="margin:2px; display:inline;">
        <i class="fas fa-unlock-alt"></i>
        Unblock
    </button>
    <input class="Sender" type="text" name="ids" value="" style="visibility:hidden; position:absolute;" />
</form>
<form method="post" asp-controller="Users" asp-action="Delete" style="display:inline;">
    <input class="Sender" type="text" name="ids" value="" style="visibility:hidden; position:absolute;" />
    <button type="submit" class="btn btn-danger" style="margin:2px; display:inline;">
        <i class="fas fa-trash-alt"></i>
        Delete
    </button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <input class="form-check-input" type="checkbox" value="" id="CheckBoxGeneral" onclick="SelectAll()">
                <label class="form-check-label">
                </label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRegistration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLastLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
         {
            <tr>
                <td>
                    <form method="post">
                        <input value="@item.Id" name="check" class="form-check-input position-static single-check-box"
                               aria-label="..." type="checkbox" onclick="Select(this.form.check.value)">
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRegistration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateLastLogin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
         }
    </tbody>
</table>